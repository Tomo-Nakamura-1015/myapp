<h2>お問い合わせ</h2>
<%= form_with model: @contact, url: contact_path, local: true do |f| %>
  <div class="form-group">
    <label>名前</label>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <label>メールアドレス</label>
    <%= f.text_field :email %>
  </div>

  <div class="form-group">
    <label>お問い合わせ内容</label>
    <%= f.text_area :message%>
  </div>
  <div>
    <%= f.submit '送信', class: "btn btn-primary" %>
  </div>
<% end %>