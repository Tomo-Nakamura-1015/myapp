<h1>ログイン</h1>
<%= form_with scope: :session, url: login_path, local: true do |f| %>
    <div>
        <label>メールアドレス</label>
        <%= f.text_field :email %>
    </div>
    <div>
        <label>パスワード</label>
        <%= f.text_field :password %>
    </div>
    <div>
        <label>パスワード再入力</label>
        <%= f.password_field :password_confirmation %>
    </div>
    <div>
        <%= f.submit "ログイン" %>
    </div>
<% end %>
<div><%= link_to "ホーム", root_path %></div>