<h1>プロフィール編集</h1>
<%= link_to "[ユーザー削除]", user_path(@user), method: :delete, data: { confirm: "本当に削除しちゃう?" } %>
<%= form_with model: @user, local: true do |f| %>
    <div>
        現在のプロフィール画像<br>
        <% if @user.image? %>
            <%= image_tag @user.image.url, :size => '128x128' %>
        <% else %>
            <%= image_tag 'default.png', :size => '128x128' %>
        <% end %><br>
        プロフィール画像の変更：<%= f.file_field :image %>
    </div>
    <div>
        <label>名前</label>
        <%= f.text_field :name %>
    </div>
    <div>
        <label>unique_name</label>
        <%= f.text_field :unique_name %>
    </div>
    <div>
        <label>メールアドレス</label>
        <%= f.email_field :email %>
    </div>
    <div>
        <label>プロフィール編集</label><br>
        <%= f.text_area :profile %>
    </div>
        <%= f.submit "送信", class: "btn btn-primary" %>
    </div>
<% end %>