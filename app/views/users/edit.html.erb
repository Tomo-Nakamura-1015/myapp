<div class="container">
    <h1>プロフィール編集</h1>
    <%= form_with model: @user, local: true do |f| %>
        <div class="form-group">
            現在のプロフィール画像<br>
            <% if @user.image? %>
                <%= image_tag @user.image.url, :size => '128x128' %>
            <% else %>
                <%= image_tag 'default.png', :size => '128x128' %>
            <% end %>
            <div class="form-group">
            プロフィール画像の変更<br><%= f.file_field :image %>
            </div>
        </div>
        <div class="form-group">
            <label>名前</label>
            <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
            <label>unique_name</label>
            <%= f.text_field :unique_name, class: "form-control" %>
        </div>
        <div class="form-group">
            <label>メールアドレス</label>
            <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="form-group">
            <label>プロフィール編集</label><br>
            <%= f.text_area :profile, class: "form-control" %>
        </div>
            <%= f.submit "送信", class: "btn btn-primary" %>　
            <%= link_to "[ユーザー削除]", user_path(@user), method: :delete, data: { confirm: "本当に削除しちゃう?" } %>
        </div>
    <% end %>
</div>