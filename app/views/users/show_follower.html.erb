<% if @user.followers.count != 0 %>
  <h4><%= "#{@user.name}さんのフォロワー(#{@user.followings.count})" %></h4>
  <% @user.followers.each do |user| %>
    <li class="mb-2">
    <% if user.image? %>
        <%= image_tag user.image.url, :size => '40x40' %>
    <% else %>
        <%= image_tag 'default.png', :size => '40x40' %>
    <% end %>
    <%= link_to user.name, user_path(user), class: "h5" %> （<%= user.unique_name %>）
  </li>
  <% end %>
<% else %>
  <h4>フォロワーはいません。ぴえん</h4>
<% end %>