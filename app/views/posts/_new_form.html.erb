<div class="border border-dark rounded mb-3">
  <div class="post_form">
    <h4>投稿する</h4>
    <%= form_with model: @post, url: posts_path, local: true do |f| %>
      <div class="form-group">
      <%= f.text_area :content, class: "form-control" %>
      </div>
      <div  class="form-group">
        画像<br>
        <%= f.file_field :image%>
      </div>
      <div class="form-group">
        <%= f.submit "投稿する", class: "btn btn-primary btn-sm" %>
      </div>
    <% end %>
  </div>
</div>