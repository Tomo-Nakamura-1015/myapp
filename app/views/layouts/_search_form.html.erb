<div class="search_bar">
  <div class="row">
    <div class="col-md-6">
      <p class="search_name">
      ログイン中：<% if @current_user.image? %>
      <%= image_tag @current_user.image.url, :size => '30x30' %>
      <% else %>
        <%= image_tag 'default.png', :size => '30x30' %>
      <% end %>
      <%= link_to @current_user.name, user_path(@current_user) %>（<%= @current_user.unique_name %>）
      </p>
    </div>
    <div class="col-md-6">
      <div class="search_form">
        <%= form_with url: search_path, method: :get, local: true do |f| %>
          <%= f.text_field :content %>
          <%= f.select :model, [["ユーザー", "user"], ["投稿", "post"]]%>
          <%= f.submit '検索する', class: "btn btn-success btn-sm" %>
        <% end %>
      </div>
    </div>
  </div>
</div>