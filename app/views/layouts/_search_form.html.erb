<div class="row search_bar">
    <div class="search_name col-md-6">
      ログイン中：<% if @current_user.image? %>
      <%= image_tag @current_user.image.url, :size => '30x30' %>
      <% else %>
        <%= image_tag 'default.png', :size => '30x30' %>
      <% end %>
      <%= link_to @current_user.name, user_path(@current_user), class: "text-dark" %>
    </div>

    <div class="search_form col-md-6">
      <%= form_with url: search_path, method: :get, local: true do |f| %>
        <%= f.text_field :content%>
        <%= f.select :model, [["ユーザー", "user"], ["投稿", "post"]]%>
        <%= f.submit '検索する', class: "btn btn-success btn-sm" %>
      <% end %>
    </div>
</div>
